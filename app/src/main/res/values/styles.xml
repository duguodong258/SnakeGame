<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/WHITE</item>
    </style>

    <style name="Anim_fade" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <style name="fade" parent="android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/activity_scale_main_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_scale_live_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_scale_live_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_scale_main_in</item>
    </style>

</resources>
